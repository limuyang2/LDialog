<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Theme.AppCompat.Dialog.MinWidth"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="vertical">

        <!--android:textColor="@color/material_dialog_title_color"-->
        <!--android:textSize="@dimen/material_dialog_title_size"-->
        <!--android:textStyle="bold"-->
        <TextView
            android:id="@+id/title_tv"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:textSize="@dimen/material_dialog_title_size"
            android:layout_height="wrap_content"
            android:textColor="#1B1B1B"
            android:gravity="left"
            tools:text="Title" />

        <TextView
            android:id="@+id/msg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:textColor="#1B1B1B"
            android:textSize="@dimen/material_dialog_msg_size"
            tools:text="Message" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <Button
            android:id="@+id/neg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textColor="@color/material_dialog_neg_button_color"
            android:textSize="@dimen/material_dialog_neg_btn_text_size"
            tools:text="Close" />

        <Button
            android:id="@+id/pos_btn"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="@color/material_dialog_pos_button_color"
            android:textSize="@dimen/material_dialog_pos_btn_text_size"
            tools:text="ok" />
    </LinearLayout>

</LinearLayout>